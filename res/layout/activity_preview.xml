<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previewTitle"
        style="?android:attr/listSeparatorTextViewStyle" />
    <ScrollView 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	    
	    <HorizontalScrollView 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">
			
	        
			<TableLayout
				android:id="@+id/statTable"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TableRow 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
					<TextView
					    android:text="Team Name"
					    android:padding="3dp" />
					<TextView
					    android:text="Score"
					    android:padding="3dp" />
				</TableRow>
				<TableRow 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
					<TextView
					    android:id="@+id/homeTeamNameTextPreview"
					    android:text="Team Name"
					    android:padding="3dp" />
					<TextView
					    android:id="@+id/homeTeamScoreTextPreview"
					    android:text="Score"
					    android:padding="3dp" />
				</TableRow>
				<TableRow 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
					<TextView
					    android:id="@+id/opponentTeamNameTextPreview"
					    android:text="Team Name"
					    android:padding="3dp" />
					<TextView
					    android:id="@+id/opponentTeamScoreTextPreview"
					    android:text="Score"
					    android:padding="3dp" />
				</TableRow>
				<TableRow 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
					<TextView
					    android:text=""
					    android:padding="3dp" />
				</TableRow>
				<TableRow 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
					<TextView
					    android:text="Player Name"
					    android:padding="3dp" />
					<TextView
					    android:text="Goals"
					    android:padding="3dp" />
					<TextView
					    android:text="Assists"
					    android:padding="3dp" />
					<TextView
					    android:text="Blocks"
					    android:padding="3dp" />
					<TextView
					    android:text="Turnovers"
					    android:padding="3dp" />
					<TextView
					    android:text="Fantasy"
					    android:padding="3dp" />
				</TableRow>
			</TableLayout>
		</HorizontalScrollView>
	</ScrollView>
</LinearLayout>
